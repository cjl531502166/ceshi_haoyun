/**index.wxss**/

image {
  background: url("https://image.taotaoxi.cn/wechat-app/index-v2/userHead.png");
}

.productIndex {
  background: #f5f5f5;
  height: 100%;
  position: relative;
}

.swiper-box image {
  width: 100%;
}

.clear {
  clear: both;
}

.banner-bg {
  border-top: 2px solid #8c8485;
  border-bottom: 2px solid #8c8485;
  height: 27.3%;
}

.indexBannerBox {
  vertical-align: top;
  padding-left: 4%;
}

.swipe-btn-list view {
  width: 8px;
  height: 8px;
  background: rgba(201, 201, 201, 1);
  border-radius: 4px;
  margin-right: 10px;
  display: inline-block;
}

.swipe-btn-list view.on {
  background: rgba(255, 255, 255, 1);
}

.swipe-btn-wrapper {
  margin-top: -28px;
  z-index: 99;
  position: relative;
  float: right;
}

.list-bg {
  width: 100%;
  position: relative;
  padding-left: 3%;
  padding-bottom: 3%;
}

.new-project {
  width: 30%;
  box-sizing: border-box;
  float: left;
  margin: 3% 2% 0 0;
}

.project-list-bg {
  width: 59%;
  float: right;
  position: relative;
  box-sizing: border-box;
  padding: 2% 5%;
}

.project-list-bg-bor {
  border-bottom: 1px solid #d2d2d2;
}

.project-list-name {
  width: 60%;
  font-size: 14px;
  display: inline-block;
  line-height: 28px;
  font-weight: 700;
}

.project-list-message {
  font-size: 11px;
  line-height: 14px;
  font-weight: normal;
}

.project-list-img {
  width: 35%;
  position: absolute;
  right: 5%;
  top: 10%;
}

.fire {
  position: absolute;
  right: 0;
  top: 0;
  width: 24px;
  background: transparent;
}

.list-class {
  width: 22%;
  position: absolute;
  left: 0;
  top: -8%;
  border-radius: 0 24px 24px 0;
  padding: 4px 5%;
}

.list-title {
  position: absolute;
  bottom: 0;
  background: rgba(0, 0, 0, 0.45);
  color: #fff;
  width: 100%;
  padding: 2% 5%;
  box-sizing: border-box;
}

.groom {
  padding: 2% 0;
  font-weight: 700;
  width: 94%;
  margin-left: 3%;
  border-bottom: 1px solid #d2d2d2;
}

.groom-border {
  height: 14px;
  width: 0;
  margin-right: 2%;
  display: inline-block;
  line-height: 100%;
}

.test-title {
  width: 100%;
  margin: 0 0 0 -3%;
  height: 4px;
  background: #e4e4e4;
  font-weight: 700;
  font-size: 18px;
  border: 1px solid #f9f1e3;
}

.contact {
  background: url("https://image.taotaoxi.cn/wechat-app/index-v2/goWechat.png?v=2") no-repeat;
  border: 0;
  color: #000;
  height: 57px;
  width: 100%;
  margin: 0;
  background-size: 100% 100%;
}

.contact:after {
  width: 0;
  height: 0;
}

.kefu {
  display: inline-block;
  text-align: center;
  padding-left: 38px;
  background: url("https://image.taotaoxi.cn/wechat-app/zhen-ming-v2/kefu.png") 0 50% no-repeat;
  background-size: 20%;
  text-decoration: underline;
}

.bac {
  height: 43px;
  font-size: 15px;
  padding: 14% 0 0 8%;
}

.bac0 {
  background: url("https://image.taotaoxi.cn/wechat-app/super-new/knowYourself.png") 0 0 no-repeat;
  background-size: 100%;
}

.bac1 {
  background: url("https://image.taotaoxi.cn/wechat-app/super-new/fun.png") 0 0 no-repeat;
  background-size: 100%;
}

.bac2 {
  background: url("https://image.taotaoxi.cn/wechat-app/super-new/futurePlan.png") 0 0 no-repeat;
  background-size: 100%;
}

.bac3 {
  background: url("https://image.taotaoxi.cn/wechat-app/super-new/goTogether.png") 0 0 no-repeat;
  background-size: 100%;
}

.bac4 {
  background: url("https://image.taotaoxi.cn/wechat-app/super-new/emotionalTeacher.png") 0 0 no-repeat;
  background-size: 100%;
}

.bac5 {
  background: url("https://image.taotaoxi.cn/wechat-app/super-new/totalTest.png") 0 0 no-repeat;
  background-size: 100%;
}


.chooseCard {
  border: 1px solid #ff7584;
}

.test {
  width: 50%;
  float: left;
  padding: 2% 0;
  text-align: center;
}

.choose {
  background: #ff7584;
  color: #fff;
}

.noChoose {
  background: #fff;
}
