.contentBg {
  height: 100%;
}

.futureCanvas {
  margin: 3% auto;
}

canvas {
  position: static;
}

.lf {
  float: left;
}

.rt {
  float: right;
}

.clear {
  clear: both;
}

.center {
  text-align: center;
  display: block;
}

.title {
  font-size: 56rpx;
  margin: 0 auto 5%;
  color: #7f7f7f;
  padding-top: 5%;
}

.sample-graph {
  display: block;
  margin: 0 auto;
  width: 70%;
  height: auto;
}

.text-input {
  margin: 5% 15%;
  display: block;
  border: 1px solid #a5d8b9;
  border-radius: 8rpx;
  padding: 20rpx 40rpx;
  outline: none;
  font-size: 32rpx;
}

.text-input::-webkit-input-placeholder {
  color: #a5d8b9;
}

.hint-message {
  color: #7f7f7f;
  font-size: 28rpx;
}

.star-btn {
  width: 70%;
  margin: 10% auto 0;
  height: 100rpx;
  line-height: 100rpx;
  border-radius: 50rpx;
  color: #fff;
}

.bg_before {
  background: #a5d8b9;
}

.bg_after {
  background: #00903b;
}

.topicList {
  margin: 0 auto;
  width: 96%;
}

.topicList .wx-li {
  width: 46%;
  border: 1px solid #00903b;
  padding: 20rpx 0;
  height: 240rpx;
}

.nav_l {
  background: #fff;
  color: #00903b;
}

.nav_click {
  background: #00903b;
  color: #fff;
}

.topicList .wx-li:nth-child(1) {
  margin: 0 2%;
  margin-bottom: 10%;
}

.questionTop {
  margin: 30% auto 10%;
  color: #00903b;
  font-size: 40rpx;
  font-weight: 700;
  height: 150rpx;
  width: 70%;
}

.topic-num-list-bg {
  margin: 10% auto;
  width: 90%;
  height: 64rpx;
  background: #a5d8b9;
  line-height: 64rpx;
  overflow: hidden;
  border-radius: 40rpx;
}

.itemNum {
  width: 9%;
  color: #fff;
}

.bgLight {
  background: #a5d8b9;
}

.bgDeep {
  background: #37943b;
}

.topic-num-list {
  width: 100%;
}

.topic-num-list .wx-li {
  width: 9%;
  padding: 8px 0;
  color: #fff;
  background: #a5d8b9;
  font-size: 24rpx;
}

.topic-num-list .wx-li:last-child {
  border: 0;
}

.topic-select {
  font-weight: 800;
  padding-bottom: 20rpx;
}

.refresh-bg {
  background: #fff;
  position: absolute;
  top: 2%;
  right: 5%;
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
}

.refresh {
  width: 100rpx;
  height: 100rpx;
}

.question-num {
  background: #fff;
  position: absolute;
  top: -5%;
  left: -5%;
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
  color: #00903b;
  line-height: 200rpx;
  font-size: 80rpx;
}

.result-title {
  background: #00903b;
  color: #fff;
  padding: 20rpx 0;
}

.result-module {
  border: 2px solid #00903b;
  width: 90%;
  margin: 5% auto;
  color: #00903b;
  background: #fff;
}

.result-module p {
  padding: 20rpx;
  line-height: 48rpx;
}

.line {
  border-bottom: 2px solid #00903b;
  font-weight: 700;
}

.module-title {
  color: #fff;
  background: #00903b;
  position: relative;
  z-index: 10;
  margin: 5% auto;
  width: 70%;
  border-radius: 60rpx;
  padding: 20rpx;
}

.module-title .p {
  width: 20rpx;
  height: 20rpx;
  background: #00903b;
  margin: 0 auto;
  display: block;
  -webkit-transform: rotate(45deg);
  transform: rotate(45deg);
  position: absolute;
  bottom: -10rpx;
  left: 48%;
  z-index: -1;
}

.line {
  border-bottom: 2px solid #00903b;
  padding: 10rpx 0;
  font-weight: 700;
}

.text-size {
  font-size: 30rpx;
  padding-top: 40rpx;
}

.result-img {
  width: 90%;
  margin: 5% auto;
  display: block;
}

.again {
  width: 70%;
  height: 100rpx;
  line-height: 100rpx;
  color: #fff;
  background: #00903b;
  margin: 0 auto 5%;
  border-radius: 100rpx;
}

.result-scpae {
  padding: 40rpx 20rpx;
}

.result-title p {
  padding: 10rpx 0;
}
